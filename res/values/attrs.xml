<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="ViewPagerTabs">
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundColorPressed" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="lineColorCenter" format="color"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="tabPaddingLeft" format="dimension"/>
        <attr name="tabPaddingTop" format="dimension"/>
        <attr name="tabPaddingRight" format="dimension"/>
        <attr name="tabPaddingBottom" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="outsideOffset" format="dimension"/>
   </declare-styleable>
   <attr name="ViewPagerTabsStyle" format="reference" />
    
   <declare-styleable name="MessageView">
        <attr name="messageTitleColor" format="color"/>
        <attr name="messageBodyColor" format="color"/>
        <attr name="messageInfoColor" format="color"/>
        <attr name="messageTimeColor" format="color"/>
   </declare-styleable>
   <attr name="MessageViewStyle" format="reference" />
   
    <declare-styleable name="DetailsView">
        <attr name="likesBackground" format="reference"/>
        <attr name="likesTextColor" format="color"/>
        <attr name="commentsBackground" format="reference"/>
   </declare-styleable>
   <attr name="DetailsViewStyle" format="reference" />
   
    <!-- EditText text foreground color. -->
    <attr name="editTextColor" format="reference|color" />
    <!-- EditText background drawable. -->
    <attr name="editTextBackground" format="reference" />
    <attr name="textAppearanceMediumInverse" format="reference" />
    
    <attr name="menuBackground" format="color" />
    
</resources>
