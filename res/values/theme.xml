<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme.Light" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/ListView.Light</item>
        <item name="android:buttonStyle">@style/Button.Light</item>
        <item name="android:spinnerStyle">@style/Spinner.Light</item>
        <item name="android:editTextStyle">@style/EditText.Light</item>
        
        <item name="MessageViewStyle">@style/MessageView.Light</item>
        <item name="ViewPagerTabsStyle">@style/ViewPagerTabs.Light</item>
        <item name="DetailsViewStyle">@style/DetailsView.Light</item>
        <item name="menuBackground">#212121</item>
        <item name="absForceOverflow">true</item>
    <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    <item name="android:windowAnimationStyle">@style/MyActivityAnimations</item>
 
    <item name="actionBarTabStyle">@style/customActionTabStyle</item>
 <item name="actionBarTabStyle">@style/Widget.Sherlock.ActionBar.TabView</item>
        <item name="actionBarTabBarStyle">@style/Widget.Sherlock.ActionBar.TabBar</item>
        <item name="actionBarTabTextStyle">@style/Widget.Sherlock.ActionBar.TabText</item>
    </style>

    <style name="CustomTheme.Dark" parent="android:Theme.Black.NoTitleBar">
        <item name="android:listViewStyle">@style/ListView.Dark</item>
        <item name="android:buttonStyle">@style/Button.Dark</item>
        <item name="android:spinnerStyle">@style/Spinner.Dark</item>
        <item name="android:editTextStyle">@style/EditText.Dark</item>
        <item name="MessageViewStyle">@style/MessageView.Dark</item>
        <item name="ViewPagerTabsStyle">@style/ViewPagerTabs.Dark</item>
        <item name="DetailsViewStyle">@style/DetailsView.Dark</item>
        <item name="menuBackground">#454545</item>
        
        <item name="absForceOverflow">true</item>
    </style>
</resources>